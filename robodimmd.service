[Unit]
Description=Daemon for exposing the ING RoboDIMM seeing measurement via Pyro.
After=syslog.target
Wants=network-online.target
After=network-online.target

[Service]
Restart=on-failure
Type=simple
ExecStart=/usr/bin/env python3.6 -u /usr/bin/robodimmd
ExecStartPost=/usr/bin/env python3.6 -u /usr/bin/obslog info robodimmd Started by systemd
ExecStopPost=/usr/bin/env python3.6 -u /usr/bin/obslog info robodimmd Stopped by systemd
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
